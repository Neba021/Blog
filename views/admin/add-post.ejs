<div class="admin-title">
  <h2>Add New Post</h2>
</div>

<form action="/add-post" method="POST">
  <label for="title"><b>Title</b></label>
  <input type="text" placeholder="Post Title" name="title" required>

  <label for="body"><b>Content</b></label>
  <textarea name="body" cols="50" rows="10" required></textarea>

  <label for="tags"><b>Tags (comma separated)</b></label>
  <input type="text" placeholder="e.g. tech, javascript, nodejs" name="tags" required>

  <input type="submit" value="Add" class="btn">
</form>

